                <DataGrid AutoGenerateColumns="False" Background="{x:Null}" FlowDirection="RightToLeft" ItemsSource="{Binding Path=All_Marahel}" Margin="222,31,310,10" Name="dataGrid2" CanUserAddRows="False" CanUserDeleteRows="False">
